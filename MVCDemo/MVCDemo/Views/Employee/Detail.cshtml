@*<h2>Detail</h2>*@


@model IEnumerable<MVCDemo.Models.Employee>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <h4>Employee Detail</h4>
<p>
    @Html.ActionLink("Add New Employee", "Create")
</p>

<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.EmpId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.HiddenFor(model => item.EmpId)
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.EmpId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(model => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmpId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EmpId }, new { onclick = "return confirm('Are sure wants to delete?');" })
            </td>
        </tr>



    }

</table> 